<div class = "col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">

<h2>User info</h2>

          <% if @user.errors.any? %>
            <div class = "error_explanation">
            <h3><%= @user.errors.count %>errors prohibited this book from being saved:</h3>
              <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

<%= form_with model: @user, method: :patch do |f| %>

    <div class = "form-group">
       <p>Name</p>
       <%= f.text_field :name %>
    </div>

    <div class = "form-group">
        <p>Image</p>
        <%= f.file_field :profile_image, accept: "image/*" %>
    </div>

    <div class = "form-group">
       <p>Introduction</p>
       <%= f.text_area :introduction %>
    </div>

    <div class = "form-group">
            <%= f.submit 'Update User', class: "btn btn-secondary" %>
    </div>

 <% end %>
 </div>
 